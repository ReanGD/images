FROM docker.io/bitnami/minideb:buster
LABEL maintainer "ReanGD"

ENV HOME="/" \
    OS_ARCH="amd64" \
    OS_FLAVOUR="debian-10" \
    OS_NAME="linux"

EXPOSE 5432

COPY prebuildfs /
# Install required system packages and dependencies
RUN install_packages acl ca-certificates curl gzip libbsd0 libbz2-1.0 libc6 libedit2 libffi6 libgcc1 libgmp10 libgnutls30 libhogweed4 libicu63 libidn2-0 libldap-2.4-2 liblz4-1 liblzma5 libncurses6 libnettle6 libp11-kit0 libpcre3 libreadline7 libsasl2-2 libsqlite3-0 libssl1.1 libstdc++6 libtasn1-6 libtinfo6 libunistring2 libuuid1 libxml2 libxslt1.1 libzstd1 locales procps tar zlib1g && \
    . /opt/bitnami/scripts/libcomponent.sh && component_unpack "postgresql" "14.1.0-4" --checksum dbbad251ad00c8b452619ba76f621c0f2523cfbe347543ca2b8ae08ec9047aee && \
    . /opt/bitnami/scripts/libcomponent.sh && component_unpack "gosu" "1.14.0-0" --checksum 3e6fc37ca073b10a73a804d39c2f0c028947a1a596382a4f8ebe43dfbaa3a25e && \
    /opt/scripts/walg-download.sh && \
    chmod g+rwX /opt/bitnami && \
    localedef -c -f UTF-8 -i en_US en_US.UTF-8 && \
    update-locale LANG=C.UTF-8 LC_MESSAGES=POSIX && \
    DEBIAN_FRONTEND=noninteractive dpkg-reconfigure locales && \
    echo 'en_US.UTF-8 UTF-8' >> /etc/locale.gen && \
    echo 'ru_RU.UTF-8 UTF-8' >> /etc/locale.gen && \
    locale-gen

COPY --chown=1000 rootfs /
RUN /opt/bitnami/scripts/postgresql/postunpack.sh && \
    /opt/bitnami/scripts/locales/add-extra-locales.sh && \
    /opt/scripts/walg-postunpack.sh
ENV BITNAMI_APP_NAME="postgresql" \
    LANG="en_US.UTF-8" \
    LANGUAGE="en_US:en" \
    NSS_WRAPPER_LIB="/opt/bitnami/common/lib/libnss_wrapper.so" \
    PATH="/opt/bitnami/wal-g/bin:/opt/bitnami/postgresql/bin:/opt/bitnami/common/bin:$PATH"

USER runner
VOLUME [ "/bitnami/postgresql", "/backup", "/docker-entrypoint-initdb.d", "/docker-entrypoint-preinitdb.d" ]
ENTRYPOINT [ "/opt/bitnami/scripts/postgresql/entrypoint.sh" ]
CMD [ "/opt/bitnami/scripts/postgresql/run.sh" ]
